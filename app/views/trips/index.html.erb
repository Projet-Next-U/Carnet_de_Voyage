<h1>Liste des Voyages</h1>

<table>
  <thead>
    <tr>
      <th>Destination</th>
      <th>Description</th>
      <th>Date de Début</th>
      <th>Date de Fin</th>
      <th>Utilisateur</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trips.each do |trip| %>
      <tr>
        <td><%= trip.destination %></td>
        <td><%= trip.description %></td>
        <td><%= trip.date_debut.strftime("%d/%m/%Y") if trip.date_debut %></td>
        <td><%= trip.date_fin.strftime("%d/%m/%Y") if trip.date_fin %></td>
        <td><%= trip.user.nom if trip.user %></td>
        <td><%= link_to 'Voir', trip %></td>
        <td><%= link_to 'Modifier', edit_trip_path(trip) %></td>
        <td><%= link_to 'Supprimer', trip, method: :delete, data: { confirm: 'Êtes-vous sûr de vouloir supprimer ce voyage ?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

